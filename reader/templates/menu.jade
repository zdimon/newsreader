script(type="text/ng-template" id="dist/templates/menu.html")
    ion-side-menus(enable-menu-with-back-views="false")
        ion-side-menu-content
            ion-nav-bar.bar-stable
                ion-nav-back-button
                ion-nav-buttons(side="left")
                    button(class="button button-icon ion-navicon" menu-toggle="left")
                    div(style="margin-top: -5px")        
                        img(src="/images/logo_clean.png")
                    
    
                ion-nav-buttons(side="right")

                    button(class="button button-icon button-clear " style="width: 160px" ng-show="is_articles").
                        Текстовый режим
                    
                    button(class="button button-icon button-clear " style="width: 160px" ng-show="is_graphics").
                        Графический режим

                    button(class="button button-icon button-clear ion-chevron-left" style="width: 70px" ng-show="show_backward" ng-click="go_backward({{backward_id}})")
                        
                    button(class="button button-icon button-clear ion-chevron-right" style="width: 70px" ng-show="show_forward" ng-click="go_forward({{forward_id}})")
                        
                        

                                         
                
            ion-nav-view(name="content")
    
        ion-side-menu(side="left")
            ion-header-bar.bar-stable
                div.title
                    | пресса.ру
                    span(style="float: right")
                        a( class="pointer" ng-if="lang!='ch'"  ng-click="change_lang('ch')")
                            img(src="/images/ch.png")
                        a( class="pointer" ng-if="lang!='ru'"  ng-click="change_lang('ru')")
                            img(src="/images/ru.png") 
                        a( class="pointer" ng-if="lang!='en'"  ng-click="change_lang('en')")
                            img(src="/images/en.png")                              
    
            ion-content(padding="false" class="side-menu-left has-header")
                ion-list(id="menu-list6")
                    ion-item(id="menu-list-item1" ui-sref="reader.index" menu-close="").
                        {{ trans('ТОП10') }}
                    ion-item(id="menu-list-item1" ui-sref="reader.catalog_detail({id: c.id})" menu-close="" ng-repeat="c in catalog.categories").
                        {{ trans(c.name) }}
                    //-
                        ion-item(id="menu-list-item11" ui-sref="reader.magazines" menu-close="").
                            Газеты
                        ion-item(id="menu-list-item11" ui-sref="reader.articles" menu-close="").
                            Статьи
