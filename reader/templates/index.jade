script(type="text/ng-template" id="dist/templates/index.html")
    ion-view(title="ТОП10" id="page1")
        ion-content(padding="true" class="has-header")
            div
                ion-list
                    ion-item(class="item-thumbnail-left" ng-repeat="a in top_list.articles" ng-click="go(a.id)" style="padding-left: 220px")
                        //a(ui-sref="reader.journals" class="item-thumbnail-left")
                        img(ng-src="/data/top10/images/{{ top_list.date }}/{{ a.id }}.png" class="top10_img_link" style="max-height: 100px; max-width: 200px" )
                        h2 {{ a.title }}
                        p {{ a.author }}
                        p {{ a.journal }}
                        p
                            {{ a.short_text }}